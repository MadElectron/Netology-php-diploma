{% extends 'base.twig' %}

{% block title %}Панель администратора{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-2 aside">
                <h3>Меню</h3>
                <ul class="nav nav-pills nav-stacked">
                    <li class="active"><a href="">Пользователи</a></li>
                    <li><a href="">Темы</a></li>
                    <li><a href="">Вопросы</a></li>                    
                </ul>
            </div>
            <div class="col-md-10">
                <h2>Панель администратора</h2>
                <hr>
                <h3>Пользователи <a href="{{route('user.create')}}" class="btn btn-success" title="Добавить пользователя"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a> </h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>№ п/п</th>
                            <th>id</th>
                            <th>Имя</th>
                            <th>E-mail</th>
                            <th>Пароль</th>
                            <th{#  colspan="2" #}>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for u in users %}
                        <tr>
                            <td>{{loop.index}}</td>
                            <td>{{u.id}}</td>
                            <td>{{u.name}}</td>
                            <td>{{u.email}}</td>
                            <td>{{u.password|slice(0,20)}}... (<a href="{{route('user.edit', {'id' : u.id})}}" title="Изменить пароль">Изменить</a>)</td>
                            {# <td><a href="" class="btn btn-success" title="Редактировать пользователя"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td> #}
                            <td>
                                <form action="{{route('user.destroy', {'id' : u.id})}}" method="post" accept-charset="utf-8">
                                    {{ method_field('delete') }}
                                    <input type="hidden" name="id" value="{{user.id}}">      
                                    <input type="submit" class="btn btn-danger" name="submit" value="Удалить">
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>      
{% endblock %}   